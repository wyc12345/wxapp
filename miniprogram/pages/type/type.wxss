/* miniprogram/pages/type/type.wxss */
.top{
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  position: fixed;
  z-index: 9;
  top: 0;
  border-radius: 0 0 40rpx 40rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}
.top view{
  display: inline-block;
  margin-right: 30rpx;
}
.selected{
  background-color: #fff;
  border-bottom: 2px solid #000;
  font-weight: bold;
}
.normal{
  background-color: #ffffff;
}
swiper{
  width: 750rpx;
  min-height: 1800rpx;
  margin-top: 120rpx;
} 
swiper-item{
  min-height: 1800rpx;
}
.product{
  width: 680rpx;
  height: 166rpx;
  border-radius: 40rpx;
  background: #ffffff;
  margin: 0 auto;
  box-shadow: 4px 4px 5px #ddd;
  margin-bottom: 20rpx;
  line-height: 160rpx;
  position: relative;
}
.product image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
  float: left;
}
.product text{
  margin-left: 30rpx;
}
.product .price{
  position: absolute;
  right: 80rpx;
}