/* miniprogram/pages/cart/cart.wxss */
.top{
  width: 750rpx;
  height: 100rpx;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  border-radius: 0 0 40rpx 40rpx;
  font-size: 40rpx;
  line-height: 100rpx;
  text-align: center;
  z-index: 9;
}
.cart{
  margin-top: 120rpx;
}
.cart-prd{
  width: 680rpx;
  height: 166rpx;
  border-radius: 40rpx;
  background: #ffffff;
  margin: 0 auto;
  box-shadow: 4px 4px 5px #ddd;
  margin-bottom: 20rpx;
  line-height: 120rpx;
  position: relative;
}
.cart-prd image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
  float: left;
}
.cart-prd .name{
  margin-left: 30rpx;
}
.cart-prd .price{
  width: 120rpx;
  position: absolute;
  right: 80rpx;
}